<div class='container login-container'>
    <div id='login'>
        <h1>Create your account now!</h1>

        <p> Please enter a unique username and password! You will be able to add more details once logged in. </p>
    </div>

    <form id="signup-form" class='form-style'>
        <div class="mb-3 field">
            <input type='text' class="form-style" id="username" placeholder='' required></input>
            <label for="username" class="form-label">Username</label>
        </div>

        <div class="mb-3 field">
            <input type="password" class="form-style" id="password" placeholder='' required>
            <label for="password" class="form-label">Password</label>
        </div>

        <div class="mb-3 field">
            <input type="password" class="form-style" id="passwordConfirm" placeholder='' required>
            <label for="password" class="form-label">Confirm Password</label>
        </div>

        <!-- If the password and passwordComfirm don't match, message will be displayed here. -->
        <div class="mb-3">
            <p id="message" class="text-danger"></p>
        </div>

        <div class="mb-3">
            <button id="signup-btn" type="submit" class="btn btn-minion">Submit</button>
        </div>

    </form>
</div>


<script type="text/javascript" src="/assets/js/signup.js"></script>
